<form role="form" method="post" id="agentForm">
<div class="modal-header">
	<h4>修改经理人信息</h4>
</div>
<div class="modal-body" >
									<div class="form-group">
										<label>姓名</label>
										<input class="form-control"  name="name" value=<%=data[0].name%>>
									</div>
									<div class="form-group">
										<label>性别：</label>
										<label class="radio-inline">
											<input type="radio" name="sex" id="male" value="0" <%if(data[0].sex=='0'){%>checked<%}%>>女
										</label>
										<label class="radio-inline">
											<input type="radio" name="sex" id="female" value="1" <%if(data[0].sex=='1'){%>checked<%}%>>男
										</label>
									</div>
									<div class="form-group">
										<label>移动电话</label>
										<input class="form-control"  name="phone" value=<%=data[0].phone%>>
									</div>
									<div class="form-group">
										<label>固定电话</label>
										<input class="form-control"  name="tel" value=<%=data[0].tel%>>
									</div>
									<div class="form-group">
										<label>描述</label>
										<textarea class="form-control" rows="6" name="desc"><%=data[0].desc%></textarea>
									</div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="formSubmit('<%=data[0].guid%>')">保存</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
</div>
</form>