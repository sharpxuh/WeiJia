            <div class="col-lg-6">
                <form role="form"  method="post" id="recruitForm">
                        <label>责任描述:</label>
                        <textarea class="form-control" rows="5" id="duty"><%=data[0].duty%></textarea>
                    <div class="form-group">
                        <label>招聘要求:</label>
                        <textarea class="form-control" rows="5" id="require"><%=data[0].require%></textarea>
                    </div>
                    <div class="form-group">
                        <label>招聘人数:</label>
                        <input class="form-control" value='<%=data[0].number%>' id="number">
                    </div>
                    <div class="form-group">
                         <label>投职简历邮箱:</label>
                         <input class="form-control" value='<%=data[0].email%>' id="email">
                     </div>
                     <div class="form-group">
                            <label>联系电话:</label>
                            <input class="form-control" value='<%=data[0].tel%>' id="tel">
                     </div>
                    <br/>
                    <button type="button" class="btn btn-success" onclick="recruitSubmit('<%=data[0].guid%>')">确定</button>&nbsp;&nbsp;&nbsp;
