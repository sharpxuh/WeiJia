    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        function recruitSubmit(guid){
            $.ajax({
                type: "POST",
                url: "/user/updateRecruit/"+guid+"?duty="+$("#duty").val()+"&require="+$("#require").val()+"&number="+$("#number").val()+"&email="+$("#email").val()+"&tel="+$("#tel").val(),
                success: function(data){
                    if(data.success==true){
                        alert("操作成功！");
                        window.location.reload();
                    }else{
                        alert("操作失败！");
                    }
                }
            });
        };

    </script>
