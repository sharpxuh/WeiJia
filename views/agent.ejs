<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true,
            bStateSave: true
        });
    });

    function deleteAgent(guid) {
        $.ajax({
            type: "get",
            url: "/user/deleteAgent/" + guid,
            dataType: "json",
            success: function (data) {
                if (data.success == true) {
                    window.location.reload();
                } else {
                    alert("删除失败！");
                }
            }
        });
    }

    function show(guid) {
        $('#myModal').modal({remote: '/user/detailAgent/' + guid, backdrop: false}).on("hidden.bs.modal", function () {
            $(this).removeData("bs.modal");
        });
    }

    function formSubmit(guid) {
        var formData = $("#agentForm").serialize();
        $.ajax({
            type: "POST",
            url: "/user/updateAgent/" + guid,
            processData: true,
            data: formData,
            success: function (data) {
                if (data.success == true) {
                    alert("操作成功！");
                    $('#myModal').modal('hide');
                    window.location.reload();
                } else {
                    alert("操作失败！");
                }
            }
        });
    }
    ;
</script>
