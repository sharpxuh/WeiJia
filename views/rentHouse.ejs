        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                    responsive: true,
                    bStateSave: true
                });
            });


            function deleteHouse(guid){
                $.ajax({
                    type: "get",
                    url: "/house/deleteHouse/"+guid,
                    dataType: "json",
                    success: function(data){
                        if(data.success == true){
                            window.location.reload();
                        }else{
                            alert("删除失败！");
                        }
                    }
                });
            }

            function upload(guid){
                $('#myModal').modal({remote:'/house/upload/'+guid,backdrop:false}).on("hidden.bs.modal", function () {
                    $(this).removeData("bs.modal");
                });
            }

            function uploadFiles(guid){
                $("#uploadForm").ajaxSubmit({
                    url : "/house/uploadfiles/"+guid, // 请求的url
                    type : "post", // 请求方式
                    dataType : "json",
                    success : function(data){
                        alert("上传成功！");
                        $('#myModal').modal('hide');
                         window.location.reload();
                    },
                    error : function(){
                        alert("数据加载失败！");
                    }
                })
                }

                function editHouse(guid){
                    $('#myModal').modal({remote:'/house/detailHouse/'+guid,backdrop:false}).on("hidden.bs.modal", function () {
                        $(this).removeData("bs.modal");
                    });
                }

                function formSubmit(guid){
                    var formData=$("#houseForm").serialize();
                    $.ajax({
                        type: "POST",
                        url: "/house/updateHouse/"+guid,
                        processData:true,
                        data:formData,
                        success: function(data){
                            if(data.success==true){
                                alert("操作成功！");
                                $('#myModal').modal('hide');
                                window.location.reload();
                            }else{
                                alert("操作失败！");
                            }
                        }
                    });
                };

                function showPic(photourl) {
                        var photourl =photourl.split(";");
                        var msg = [];
                        $.each(photourl,function(){
                            if(this!=""){
                                msg.push({ href:'/upload/'+this,title:'' })
                            }else{
                                msg.push({ href:'/images/b.jpg',title:'暂时无照片' });
                            }
                        })
                        $.swipebox(msg);
                    };
                    jQuery(function($) {
                        $(".swipebox").swipebox({
                            useCSS : true,
                            hideCloseButtonOnMobile : false
                        });
                    });
        </script>
