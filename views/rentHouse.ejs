                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>标题</th>
                                    <th>价格</th>
                                    <th>户型</th>
                                    <th>面积</th>
                                    <th>楼层</th>
                                    <th>装修情况</th>
                                    <th>房源朝向</th>
                                    <th>建筑年代</th>
                                    <th>地址</th>
                                    <th>经理人</th>
                                    <th>照片</th>
                                    <th style="text-align: center">操作</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var i=0; i< data.length;i++){%>
                                <tr>
                                <td><%=i+1%></td>
                                <td><%= data[i].title %></td>
                                <td><%= data[i].price %></td>
                                <td><%if(data[i].typelist!=null){%><%= data[i].typelist.label %><%}%></td>
                                <td><%= data[i].area %></td>
                                <td><%= data[i].floor %></td>
                                <td><%if(data[i].fitment=="0"){%>毛坯<%}%><%if(data[i].fitment=="1"){%>简装<%}%><%if(data[i].fitment=="2"){%>精装<%}%><%if(data[i].fitment=="3"){%>豪华装修<%}%></td>
                                <td><%if(data[i].forward=="0"){%>南北朝向<%}%><%if(data[i].forward=="1"){%>非南北朝向<%}%></td>
                                <td><%= data[i].createyear %></td>
                                <td><%= data[i].address %></td>
                                <td class="center"><%if(data[i].agent!=null){%><%= data[i].agent.name %><%}%></td>
