                                <td style="text-align: center"><button type="button" class="btn btn-danger" onClick="deleteHouse('<%=data[i].guid%>')">删除</button>
                                    <button type="button" class="btn btn-success" onClick="editHouse('<%=data[i].guid%>')" >修改</button>
                                    <button type="file" class="btn btn-warning" onClick="upload('<%=data[i].guid%>')" >上传</button>
